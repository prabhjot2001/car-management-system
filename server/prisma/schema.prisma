generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  cars      Car[]
  createdAt DateTime @default(now())
}

model Car {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  carType     String
  company     String
  dealer      String
  images      String[]
  tags        String[]
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}
